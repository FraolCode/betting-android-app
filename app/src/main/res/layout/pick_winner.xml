<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/picW"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/ic_launcher_round"
                />

            <TextView
                android:id="@+id/tv"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good Luck!"
                />

            <TextView
                android:id="@+id/phonea"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Check if all bet users in"
                />
            <Button
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Checking All player in"
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/checkAllIn"
                />
            <Button
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="Pick Winner"
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/pickWinner"
                />

            <Button
                android:id="@+id/cancelB"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cancel"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/winL"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@mipmap/ic_launcher_round"
                />

            <TextView
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Winner of this Bet is"
                />

            <TextView
                android:id="@+id/winnerPhone"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="+251912345678"
                />

            <Button
                android:id="@+id/backToHome"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cancel"
                android:visibility="visible" />


        </LinearLayout>

    </LinearLayout>

</ScrollView>